[core]
	editor = nvim
[init]
	defaultBranch = main
[fetch]
	prune = true
	pruneTags = true
[submodule]
	recurse = true
[push]
	recurseSubmodules = check
[alias]
	smu = submodule update --init --recursive
	sms = submodule status
	sma = submodule add
	lgl = log --graph --oneline --decorate-refs=refs/heads
	lgb = log --graph --oneline --branches
	lga = log --graph --oneline --all
	lgmh = log --oneline main..HEAD
	fp = fetch origin --prune --prune-tags
	df = diff
	dfc = diff --cached
	wtl = worktree list
	wta = worktree add
	wtr = worktree remove
[include]
	path = .gitconfig.personal
	path = .gitconfig.work
[includeIf "gitdir:~/.config/"]
	path = .gitconfig.personal
[includeIf "gitdir:~/temp/"]
	path = .gitconfig.personal
[includeIf "gitdir:~/ascending/"]
	path = .gitconfig.personal
