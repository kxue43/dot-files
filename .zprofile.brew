# ------------------------------------------------------------------------
# brew settings
# Activate brew on Apple ARM machines.
if ! [[ -v BREW_PREFIX ]]; then
    eval $(/opt/homebrew/bin/brew shellenv)
fi
export HOMEBREW_FORBIDDEN_FORMULAE="openjdk"
# ------------------------------------------------------------------------
# PATH.
export PATH="$HOME/go/bin:$HOME/.local/bin:$PYENV_ROOT/bin:/Applications/MacVim.app/Contents/bin:$PATH"
# ------------------------------------------------------------------------
# Activate pyenv.
eval "$(pyenv init -)"
